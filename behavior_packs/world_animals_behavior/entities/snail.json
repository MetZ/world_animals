{
  "format_version": "1.21.0",
  "minecraft:entity": {
    "description": {
      "identifier": "worldanimals:snail",
      "is_spawnable": true,
      "is_summonable": true,
      "is_experimental": false
    },
    "component_groups": {
      "minecraft:snail_baby": {
        "minecraft:is_baby": {},
        "minecraft:scale": { "value": 0.3 },
        "minecraft:ageable": {
          "duration": 900,
          "grow_up": {
            "event": "minecraft:ageable_grow_up",
            "target": "self"
          }
        },
        "minecraft:behavior.follow_parent": {
          "priority": 4,
          "speed_multiplier": 1.1
        }
      },
      "minecraft:snail_adult": {
        "minecraft:experience_reward": {
          "on_death": "query.last_hit_by_player ? Math.Random(1,2) : 0"
        },
        "minecraft:loot": {
          "table": "loot_tables/entities/snail.json"
        }
      }
    },
    "components": {
      "minecraft:nameable": {},
      "minecraft:type_family": {
        "family": ["snail", "mob"]
      },
      "minecraft:health": {
        "value": 4,
        "max": 4
      },
      "minecraft:collision_box": {
        "width": 0.3,
        "height": 0.3
      },
      "minecraft:movement": {
        "value": 0.1
      },
      "minecraft:navigation.walk": {
        "can_path_over_water": false,
        "avoid_damage_blocks": true
      },
      "minecraft:movement.basic": {},
      "minecraft:can_climb": {},
      "minecraft:behavior.random_stroll": {
        "priority": 5
      },
      "minecraft:behavior.look_at_player": {
        "priority": 6,
        "target_distance": 5.0,
        "probability": 0.03
      },
      "minecraft:behavior.random_look_around": {
        "priority": 7
      },
      "minecraft:behavior.hurt_by_target": {
        "priority": 1
      },
      "minecraft:hurt_on_condition": {
        "damage_conditions": [
          {
            "filters": {
              "test": "in_lava",
              "subject": "self",
              "operator": "==",
              "value": true
            },
            "cause": "lava",
            "damage_per_tick": 2
          }
        ]
      },
      "minecraft:damage_sensor": {
        "triggers": {
          "on_damage": {
            "event": "react",
            "deals_damage": true
          }
        }
      },
      "minecraft:physics": {},
      "minecraft:pushable": {
        "is_pushable": true,
        "is_pushable_by_piston": true
      }
    },
    "events": {
      "minecraft:entity_spawned": {
        "randomize": [
          {
            "weight": 9,
            "add": {
              "component_groups": ["minecraft:snail_adult"]
            }
          },
          {
            "weight": 1,
            "add": {
              "component_groups": ["minecraft:snail_baby"]
            }
          }
        ]
      },
      "minecraft:entity_born": {
        "add": {
          "component_groups": ["minecraft:snail_baby"]
        }
      },
      "minecraft:ageable_grow_up": {
        "remove": {
          "component_groups": ["minecraft:snail_baby"]
        },
        "add": {
          "component_groups": ["minecraft:snail_adult"]
        }
      }
    }
  }
}
