{
  "format_version": "1.21.0",
  "minecraft:entity": {
    "description": {
      "identifier": "worldanimals:swordfish",
      "is_spawnable": true,
      "is_summonable": true,
      "is_experimental": false
    },
    "component_groups": {
      "minecraft:swordfish_aggressive": {
        "minecraft:behavior.nearest_attackable_target": {
          "priority": 1,
          "entity_types": [
            {
              "filters": {
                "any_of": [
                  {
                    "test": "is_family",
                    "subject": "other",
                    "value": "zombie"
                  },
                  {
                    "test": "is_family",
                    "subject": "other",
                    "value": "squid"
                  }
                ]
              },
              "max_dist": 16
            }
          ],
          "attack_interval_min": 1.0,
          "must_see": true
        },
        "minecraft:target_nearby_sensor": {
          "inside_range": 3.0,
          "outside_range": 4.0,
          "on_inside_range": {
            "event": "minecraft:target_too_close",
            "target": "self"
          }
        }
      },
      "minecraft:swordfish_passive": {
        "minecraft:timer": {
          "time": [
            1,
            3
          ],
          "looping": false,
          "time_down_event": {
            "event": "minecraft:target_far_enough",
            "target": "self"
          }
        },
        "minecraft:behavior.avoid_mob_type": {
          "priority": 1,
          "entity_types": [
            {
              "filters": {
                "test": "is_family",
                "subject": "other",
                "value": "zombie"
              },
              "max_dist": 8,
              "walk_speed_multiplier": 1,
              "sprint_speed_multiplier": 1
            }
          ]
        }
      }
    },
    "components": {
      "minecraft:scale": {
        "value": 0.75
      },
      "minecraft:physics": {},
      "minecraft:movement": {
        "value": 0.2
      },
      "minecraft:navigation.swim": {},
      "minecraft:damage_sensor": {
        "triggers": {
          "on_damage": {
            "event": "worldanimals:react",
            "deals_damage": true
          }
        }
      },
      "minecraft:collision_box": {
        "width": 1.2,
        "height": 0.5
      },
      "minecraft:loot": {
        "table": "loot_tables/entities/swordfish.json"
      },
      "minecraft:type_family": {
        "family": [
          "swordfish",
          "mob"
        ]
      }
    },
    "events": {
      "minecraft:target_too_close": {
        "remove": {
          "component_groups": [
            "minecraft:swordfish_aggressive"
          ]
        },
        "add": {
          "component_groups": [
            "minecraft:swordfish_passive"
          ]
        }
      },
      "minecraft:target_far_enough": {
        "remove": {
          "component_groups": [
            "minecraft:swordfish_passive"
          ]
        },
        "add": {
          "component_groups": [
            "minecraft:swordfish_aggressive"
          ]
        }
      }
    }
  }
}
