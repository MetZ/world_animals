{
  "format_version": "1.21.0",
  "minecraft:entity": {
    "description": {
      "identifier": "worldanimals:clam",
      "is_spawnable": true,
      "is_summonable": true,
      "is_experimental": false
    },
    "component_groups": {
      "minecraft:clam_aggressive": {},
      "minecraft:clam_passive": {
        "minecraft:timer": {
          "time": [
            1,
            3
          ],
          "looping": false,
          "time_down_event": {
            "event": "minecraft:target_far_enough",
            "target": "self"
          }
        },
        "minecraft:behavior.avoid_mob_type": {
          "priority": 1,
          "entity_types": [
            {
              "filters": {
                "test": "is_family",
                "subject": "other",
                "value": "zombie"
              },
              "max_dist": 8,
              "walk_speed_multiplier": 1,
              "sprint_speed_multiplier": 1
            }
          ]
        }
      },
      "minecraft:clam_behaviors": {}
    },
    "components": {
      "minecraft:experience_reward": {
        "on_death": "query.last_hit_by_player ? 10 : 0"
      },
      "minecraft:nameable": {},
      "minecraft:collision_box": {
        "width": 0.85,
        "height": 0.85
      },
      "minecraft:health": {
        "value": 20,
        "max": 20
      },
      "minecraft:hurt_on_condition": {
        "damage_conditions": [
          {
            "filters": {
              "test": "in_lava",
              "subject": "self",
              "operator": "==",
              "value": true
            },
            "cause": "lava",
            "damage_per_tick": 4
          }
        ]
      },
      "minecraft:movement": {
        "value": 0.1
      },
      "minecraft:underwater_movement": {
        "value": 0.1
      },
      "minecraft:follow_range": {
        "value": 16,
        "max": 16
      },
      "minecraft:navigation.swim": {
        "can_path": true,
        "can_breach": true,
        "can_jump": false
      },
      "minecraft:movement.sway": {},
      "minecraft:jump.static": {},
      "minecraft:breathable": {
        "breathes_water": true
      },
      "minecraft:loot": {
        "table": "loot_tables/entities/pearl.json"
      },
      "minecraft:target_nearby_sensor": {
        "inside_range": 3.0,
        "outside_range": 4.0,
        "on_inside_range": {
          "event": "minecraft:target_too_close",
          "target": "self"
        }
      },
      "minecraft:type_family": {
        "family": [
          "clam",
          "animal",
          "mob"
        ]
      },
      "minecraft:physics": {},
      "minecraft:pushable": {
        "is_pushable": true,
        "is_pushable_by_piston": true
      },
      "minecraft:damage_sensor": {
        "triggers": {
          "on_damage": {
            "event": "react",
            "deals_damage": true
          }
        }
      }
    },
    "events": {
      "minecraft:target_too_close": {
        "remove": {
          "component_groups": [
            "minecraft:clam_aggressive"
          ]
        },
        "add": {
          "component_groups": [
            "minecraft:clam_passive"
          ]
        }
      },
      "minecraft:target_far_enough": {
        "remove": {
          "component_groups": [
            "minecraft:clam_passive"
          ]
        },
        "add": {
          "component_groups": [
            "minecraft:clam_aggressive"
          ]
        }
      },
      "minecraft:entity_spawned": {
        "add": {
          "component_groups": [
            "minecraft:clam_behaviors"
          ]
        }
      }
    }
  }
}
