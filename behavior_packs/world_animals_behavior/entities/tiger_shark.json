{
  "format_version": "1.21.0",
  "minecraft:entity": {
    "description": {
      "identifier": "worldanimals:tiger_shark",
      "is_spawnable": true,
      "is_summonable": true,
      "is_experimental": false
    },
    "component_groups": {
      "minecraft:shark_0": {
        "minecraft:variant": {
          "value": 0
        }
      },
      "minecraft:shark_1": {
        "minecraft:variant": {
          "value": 1
        }
      },
      "minecraft:shark_aggressive": {
        "minecraft:behavior.nearest_attackable_target": {
          "priority": 1,
          "entity_types": [
            {
              "filters": {
                "any_of": [
                  {
                    "test": "is_family",
                    "subject": "other",
                    "value": "player"
                  },
                  {
                    "test": "is_family",
                    "subject": "other",
                    "value": "squid"
                  }
                ]
              },
              "max_dist": 16
            }
          ],
          "attack_interval_min": 1.0,
          "must_see": true
        },
        "minecraft:target_nearby_sensor": {
          "inside_range": 3.0,
          "outside_range": 4.0,
          "on_inside_range": {
            "event": "minecraft:target_too_close",
            "target": "self"
          }
        }
      },
      "minecraft:shark_passive": {
        "minecraft:timer": {
          "time": [
            1,
            3
          ],
          "looping": false,
          "time_down_event": {
            "event": "minecraft:target_far_enough",
            "target": "self"
          }
        },
        "minecraft:behavior.avoid_mob_type": {
          "priority": 1,
          "entity_types": [
            {
              "filters": {
                "test": "is_family",
                "subject": "other",
                "value": "zombie"
              },
              "max_dist": 8,
              "walk_speed_multiplier": 1,
              "sprint_speed_multiplier": 1
            }
          ]
        }
      }
    },
    "components": {
      "minecraft:damage_sensor": {
        "triggers": {
          "on_damage": {
            "event": "react",
            "deals_damage": true
          }
        }
      },
      "minecraft:movement": {
        "value": 0.12
      },
      "minecraft:underwater_movement": {
        "value": 0.2
      },
      "minecraft:physics": {},
      "minecraft:health": {
        "value": 30,
        "max": 30
      },
      "minecraft:attack": {
        "damage": 6
      },
      "minecraft:collision_box": {
        "width": 1.5,
        "height": 0.85
      },
      "minecraft:scale": {
        "value": 1.0
      },
      "minecraft:loot": {
        "table": "loot_tables/entities/shark.json"
      },
      "minecraft:type_family": {
        "family": [
          "shark",
          "monster",
          "mob"
        ]
      },
      "minecraft:pushable": {
        "is_pushable": true,
        "is_pushable_by_piston": true
      },
      "minecraft:navigation.generic": {
        "is_amphibious": true,
        "can_path_over_water": false,
        "can_swim": true,
        "can_walk": false,
        "can_breach": true
      }
    },
    "events": {
      "minecraft:target_too_close": {
        "remove": {
          "component_groups": [
            "minecraft:shark_aggressive"
          ]
        },
        "add": {
          "component_groups": [
            "minecraft:shark_passive"
          ]
        }
      },
      "minecraft:target_far_enough": {
        "remove": {
          "component_groups": [
            "minecraft:shark_passive"
          ]
        },
        "add": {
          "component_groups": [
            "minecraft:shark_aggressive"
          ]
        }
      }
    }
  }
}
