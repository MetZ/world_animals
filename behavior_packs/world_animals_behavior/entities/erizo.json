{
  "format_version": "1.21.0",
  "minecraft:entity": {
    "description": {
      "identifier": "worldanimals:erizo",
      "is_spawnable": true,
      "is_summonable": true,
      "is_experimental": false
    },
    "component_groups": {
      "minecraft:erizo_baby": {
        "minecraft:is_baby": {},
        "minecraft:scale": { "value": 0.1 },
        "minecraft:ageable": {
          "duration": 1200,
          "grow_up": {
            "event": "minecraft:ageable_grow_up",
            "target": "self"
          }
        },
        "minecraft:behavior.follow_parent": {
          "priority": 4,
          "speed_multiplier": 1.25
        }
      },
      "minecraft:erizo_adult": {
        "minecraft:experience_reward": {
          "on_death": "query.last_hit_by_player ? Math.Random(1,3) : 0"
        },
        "minecraft:loot": {
          "table": "loot_tables/entities/erizo.json"
        }
      },
      "minecraft:erizo_wild": {
        "minecraft:on_target_acquired": {
          "event": "minecraft:on_anger",
          "target": "self"
        },
        "minecraft:on_friendly_anger": {
          "event": "minecraft:on_anger",
          "target": "self"
        },
        "minecraft:behavior.nearest_attackable_target": {
          "priority": 4,
          "entity_types": [
            {
              "filters": {
                "test": "is_family",
                "subject": "other",
                "value": "player"
              },
              "max_dist": 16
            }
          ],
          "must_see": false
        }
      },
      "minecraft:erizo_angry": {
        "minecraft:attack": {
          "damage": 2
        },
        "minecraft:angry": {
          "duration": 500,
          "broadcast_anger": false,
          "broadcast_range": 20,
          "calm_event": {
            "event": "minecraft:on_calm",
            "target": "self"
          }
        },
        "minecraft:behavior.stomp_attack": {
          "priority": 1,
          "track_target": true,
          "require_complete_path": true
        }
      },
      "minecraft:erizo_tame": {
        "minecraft:is_tamed": {},
        "minecraft:tameable": {
          "probability": 1.0,
          "tame_items": [
            "minecraft:sweet_berries",
            "minecraft:carrot",
            "minecraft:apple"
          ],
          "tame_event": {
            "event": "minecraft:on_tame",
            "target": "self"
          }
        },
        "minecraft:behavior.follow_owner": {
          "priority": 5,
          "speed_multiplier": 1.0,
          "start_distance": 8,
          "stop_distance": 2
        }
      }
    },
    "components": {
      "minecraft:type_family": {
        "family": [
          "erizo",
          "mob"
        ]
      },
      "minecraft:nameable": {},
      "minecraft:health": {
        "value": 6,
        "max": 6
      },
      "minecraft:hurt_on_condition": {
        "damage_conditions": [
          {
            "filters": {
              "test": "in_lava",
              "subject": "self",
              "operator": "==",
              "value": true
            },
            "cause": "lava",
            "damage_per_tick": 4
          }
        ]
      },
      "minecraft:collision_box": {
        "width": 0.25,
        "height": 0.3
      },
      "minecraft:movement": {
        "value": 0.25
      },
      "minecraft:navigation.walk": {
        "can_path_over_water": true,
        "avoid_damage_blocks": true
      },
      "minecraft:behavior.float": {
        "priority": 0
      },
      "minecraft:behavior.hurt_by_target": {
        "priority": 1
      },
      "minecraft:behavior.random_stroll": {
        "priority": 5
      },
      "minecraft:behavior.look_at_player": {
        "priority": 6,
        "target_distance": 6.0,
        "probability": 0.02
      },
      "minecraft:behavior.random_look_around": {
        "priority": 7
      },
      "minecraft:physics": {},
      "minecraft:pushable": {
        "is_pushable": true,
        "is_pushable_by_piston": true
      },
      "minecraft:damage_sensor": {
        "triggers": {
          "on_damage": {
            "event": "react",
            "deals_damage": true
          }
        }
      }
    },
    "events": {
      "minecraft:entity_spawned": {
        "randomize": [
          {
            "weight": 90,
            "add": {
              "component_groups": [
                "minecraft:erizo_adult",
                "minecraft:erizo_wild"
              ]
            }
          },
          {
            "weight": 10,
            "add": {
              "component_groups": [
                "minecraft:erizo_baby"
              ]
            }
          }
        ]
      },
      "minecraft:entity_born": {
        "add": {
          "component_groups": [
            "minecraft:erizo_baby",
            "minecraft:erizo_tame"
          ]
        }
      },
      "minecraft:ageable_grow_up": {
        "remove": {
          "component_groups": [
            "minecraft:erizo_baby"
          ]
        },
        "add": {
          "component_groups": [
            "minecraft:erizo_adult"
          ]
        }
      },
      "minecraft:ageable_set_baby": {
        "remove": {
          "component_groups": [
            "minecraft:erizo_adult"
          ]
        },
        "add": {
          "component_groups": [
            "minecraft:erizo_baby"
          ]
        }
      },
      "minecraft:on_tame": {
        "remove": {
          "component_groups": [
            "minecraft:erizo_wild"
          ]
        },
        "add": {
          "component_groups": [
            "minecraft:erizo_tame"
          ]
        }
      },
      "minecraft:become_angry": {
        "remove": {
          "component_groups": [
            "minecraft:erizo_wild"
          ]
        },
        "add": {
          "component_groups": [
            "minecraft:erizo_angry"
          ]
        }
      },
      "minecraft:on_calm": {
        "remove": {
          "component_groups": [
            "minecraft:erizo_angry"
          ]
        },
        "add": {
          "component_groups": [
            "minecraft:erizo_wild"
          ]
        }
      }
    }
  }
}
