{
  "format_version": "1.21.0",
  "minecraft:entity": {
    "description": {
      "identifier": "worldanimals:shrimp",
      "is_spawnable": true,
      "is_summonable": true,
      "is_experimental": false
    },
    "component_groups": {
      "worldanimals:shrimp_aggressive": {
        "minecraft:behavior.nearest_attackable_target": {
          "priority": 1,
          "entity_types": [
            {
              "filters": {
                "any_of": [
                  {
                    "test": "is_family",
                    "subject": "other",
                    "value": "zombie"
                  },
                  {
                    "test": "is_family",
                    "subject": "other",
                    "value": "squid"
                  }
                ]
              },
              "max_dist": 16
            }
          ],
          "attack_interval_min": 1.0,
          "must_see": true
        },
        "minecraft:target_nearby_sensor": {
          "inside_range": 3.0,
          "outside_range": 4.0,
          "on_inside_range": {
            "event": "worldanimals:target_too_close",
            "target": "self"
          }
        }
      },
      "worldanimals:shrimp_passive": {
        "minecraft:timer": {
          "time": [1, 3],
          "looping": false,
          "time_down_event": {
            "event": "worldanimals:target_far_enough",
            "target": "self"
          }
        },
        "minecraft:behavior.avoid_mob_type": {
          "priority": 1,
          "entity_types": [
            {
              "filters": {
                "test": "is_family",
                "subject": "other",
                "value": "zombie"
              },
              "max_dist": 8,
              "walk_speed_multiplier": 1.0,
              "sprint_speed_multiplier": 1.0
            }
          ]
        }
      }
    },
    "components": {
      "minecraft:type_family": {
        "family": ["shrimp", "mob"]
      },
      "minecraft:health": {
        "max": 4,
        "value": 4
      },
      "minecraft:damage_sensor": {
        "triggers": {
          "on_damage": {
            "event": "worldanimals:react",
            "deals_damage": true
          }
        }
      },
      "minecraft:physics": {},
      "minecraft:pushable": {
        "is_pushable": true,
        "is_pushable_by_piston": true
      },
      "minecraft:collision_box": {
        "width": 0.85,
        "height": 0.85
      },
      "minecraft:loot": {
        "table": "loot_tables/entities/shrimp.json"
      },
      "minecraft:breathable": {
        "breathes_water": true
      },
      "minecraft:underwater_movement": {
        "value": 0.12
      },
      "minecraft:movement": {
        "value": 0.12
      },
      "minecraft:navigation.generic": {
        "can_walk": false,
        "can_swim": true,
        "can_breach": true,
        "can_path_over_water": false,
        "is_amphibious": true
      },
      "minecraft:jump.static": {},
      "minecraft:movement.basic": {},
      "minecraft:hurt_on_condition": {
        "damage_conditions": [
          {
            "filters": {
              "test": "in_lava",
              "subject": "self",
              "operator": "==",
              "value": true
            },
            "cause": "lava",
            "damage_per_tick": 4
          }
        ]
      }
    },
    "events": {
      "worldanimals:target_too_close": {
        "remove": {
          "component_groups": ["worldanimals:shrimp_aggressive"]
        },
        "add": {
          "component_groups": ["worldanimals:shrimp_passive"]
        }
      },
      "worldanimals:target_far_enough": {
        "remove": {
          "component_groups": ["worldanimals:shrimp_passive"]
        },
        "add": {
          "component_groups": ["worldanimals:shrimp_aggressive"]
        }
      }
    }
  }
}
