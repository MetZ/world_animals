{
  "format_version": "1.21.0",
  "minecraft:block": {
    "description": {
      "identifier": "worldanimals:palm_sapling",
      "register_to_creative_menu": true,
      "is_experimental": true
    },
        "components": {
			"minecraft:creative_category": {
				"category": "nature",
				"group": "itemGroup.search"
			},
			"minecraft:destructible_by_mining": true,
			"minecraft:light_dampening": 0,
			"minecraft:on_player_destroyed": {
				"event": "drop_sapling"
			},
			"minecraft:placement_filter": {
				"conditions": [
					{
						"block_filter": [
							"minecraft:red_sand",
							"minecraft:sand",
							"minecraft:grass",
							"minecraft:dirt"
						],
						"allowed_faces": [
							"up"
						]
					}
				]
			},	
            "minecraft:geometry": "geometry.palm_sapling",
            "minecraft:material_instances": {
                "*": {
                    "texture": "palm_sapling",
                    "render_method": "alpha_test"
                }
            },     
            "minecraft:pick_collision":{
                "origin":[-8.0, 0.0, -8.0],
                "size":[16, 16, 16]
            },
			"minecraft:entity_collision":{
                "origin":[0.0, 0.0, 0.0],
                "size":[0, 0, 0]
			},
			"minecraft:queued_ticking": {
				"looping": true,
				"interval_range": [
					20000,
					25000
				],
				"on_tick": {
					"event": "grow"
				}
			},
			"minecraft:on_interact": {
				"event": "grow",
				"condition": "query.is_item_name_any('slot.weapon.mainhand', 0, 'minecraft:bone_meal')"
			},
            "minecraft:loot": "loot_tables/blocks/palm_sapling.json",
          
			"minecraft:flammable": {
                "flame_odds": 0,
                "burn_odds": 0
            },
            "minecraft:block_light_emission": 0.0,
            "minecraft:block_light_absorption": 0.0,

            
			"minecraft:destroy_time": 0.5,
			
			"minecraft:map_color": "#bbbbbb"
        },
    "events": {
			"grow": {
				"sequence": [
					{
						"condition": "query.is_item_name_any('slot.weapon.mainhand', 0, 'minecraft:bone_meal')",
						"run_command": {
							"command": [
								"particle minecraft:crop_growth_emitter ~ ~ ~",
								"playsound item.bone_meal.use @a ~ ~ ~"
							]
						},
						"decrement_stack": {},
						"trigger": "fertilize"
					},
					{
						"condition": "query.is_item_name_any('slot.weapon.mainhand', 0, 'minecraft:bone_meal')",
						"run_command": {
							"command": [
								"structure load mystructure:palm_2 ~-6 ~ ~-5"
							]
						}
					}
				]
			},
			"fertilize": {
				"randomize": [
					{
						"weight": 75
					},
					{
						"weight": 25,
						"run_command": {
							"command": [
								"structure load worldanimals:palm_2 ~-6 ~ ~-5"
							]
						}
					}
				]
			},
			"drop_sapling": {
				"spawn_loot": {
					"table": "loot_tables/blocks/dead_tree_sapling_block.json"
				}
			}
		}
    }
}
